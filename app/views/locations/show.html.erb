
<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1680&q=80);">
  <div class="container-show">
    <div>
      <h1 id="title-show"> <strong><%=  @location.name  %></strong></h1>

    </div>
  </div>
</div>
<div class="show-container">
  <div class="card-show">
    <div class="card-body-show">
      <h5><strong>Details</strong></h5>
      <hr>
      <strong>Property</strong>
      <p><%= @location.property_type.capitalize %></p>
      <strong>Description</strong>
      <p class="card-text"><%= @location.description %></p>
    </div>

    <div class="card-location">
      <h5><strong>Location</strong></h5>
      <hr>
      <p class="card-title"><%= @location.location_address %></p>
      <div>
        <img class="img-card-show" src="https://s1.eestatic.com/2017/10/11/social/la_jungla_-_social_253487245_50033618_1706x960.jpg" alt="">
      </div>
    </div>
  </div>


  <div class="container-booking-card">
    <div class="booking-card" >
       <h3 class="card-price"> <strong>â‚¬ <%= @location.price%></strong></h3><p>/hour</p>
       <%# <form action="">
          <p>Insert you dates</p>
          <input type="text">
       </form> %>
       <%= simple_form_for [@location, @booking] do |f| %>
        <%= f.input :start_date, as: :string, input_html: { data: { controller: "flatpickr" } } %>
        <%= f.input :end_date, as: :string, input_html: { data: { controller: "flatpickr" } } %>
        <%= f.submit class:'btn btn-primary'%>
        <% end %>
    </div>
    <div class="booking-card-avatar">
     <p>Hosted by "PLACEHOLDER USER-NAME" </p>
    </div>
  </div>
</div>
