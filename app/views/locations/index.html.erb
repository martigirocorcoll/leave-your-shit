<div class="title-index d-flex justify-content-around pt-3 pb-3 fixed">
    <h1>Storage Locations near you</h1>
</div>
<div class="body-page">
  <div class="cards-index">
    <% @locations.each do |location| %>
      <div class="d-flex storage-container">
        <div>
          <% if location.photo.attached? %>
            <%= cl_image_tag location.photo.key, height: 406, width: 250, crop: :fill, class:"miniphoto" %>
          <% else %>
            <img src="https://source.unsplash.com/random/250x200" alt="photo" class="miniphoto">
          <% end %>
        </div>
        <div class= "description">
        <h4><%= location.name %></h4>
         <strong>Type</strong>
          <p><%= location.property_type.capitalize %></p>
          <strong>Location</strong>
          <p><%= location.location_address %></p>
          <strong>Description</strong>
          <p>"<%= location.description %>"</p>
          <p>Availability
           <% if location.availability == true %>
            <img src="https://cdn-icons-png.flaticon.com/512/3572/3572255.png" alt="green tick", class="availablility">
          <% else %>
            <img src="https://cdn-icons-png.flaticon.com/512/3572/3572260.png" alt="red cross" class="availablility">
          <% end %></p>
          <p><strong> â‚¬<%= location.price %>/hour</strong></p>
          <%= link_to "Delete this location", location_path(location), method: :delete, data: { confirm: "Are you sure you want to delete this location?" }, id: "delete"  %>
          <%= link_to "See more", location_path(location), class: "btn-index btn-flat", id: "show"  %>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
     style="width: 100%; height: 650px; position: sticky; top: 170px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    <%# <img id="map" src='https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/2.3381,48.8693,10.45,0,0/600x1000?access_token=pk.eyJ1IjoibWFydGlnaXJvY29yY29sbCIsImEiOiJja3ZjZWh1cnkweWU0MnBwZzRteGtvZDdmIn0.QH-r1_P0WdpNLrbN6ag57A'> %>
  </div>
</div>
