<h1>List your space!</h1>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
  Launch demo modal
</button>
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="popup-card modal-content">
      <h1>List your space!</h1>
      <%= simple_form_for(@location) do |f| %>
        <%= f.input :name %>
        <%= f.input :property_type, :collection => %w[garage spare-room basement container shed attic warehouse office]  %>
        <%= f.input :location_address %>
        <%= f.input :description %>
        <%= f.input :price, label: 'Hourly price($):' %>
        <%= f.input :photo, as: :file  %>
        <%= f.input :availability,     as: :radio_buttons, label: 'Available now?' %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
