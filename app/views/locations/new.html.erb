<h1>List your space!</h1>

<%= simple_form_for(@location) do |f| %>
  <%= f.input :name %>
  <%= f.input :property_type, :collection => %w[garage spare-room basement container shed attic warehouse office]  %>
  <%= f.input :location_address %>
  <%= f.input :description %>
  <%= f.input :price, label: 'Hourly price($):' %>
  <%= f.input :availability,     as: :radio_buttons, label: 'Available now?' %>
  <%= f.submit %>
<% end %>
